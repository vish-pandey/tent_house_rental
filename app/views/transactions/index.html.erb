<div class="container" style="margin-top: 100px;">
	<p class="alert"><%= alert %></p>
	<div class="row">
		<div class="col-md-6">
			<h3>Transactions</h3>			
		</div>
		<div style="float: right;">
			<%= link_to "New Transaction", new_transaction_path, class: "btn btn-primary", remote: true %>
		</div>
	</div>
	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Product Name</th>
	      <th scope="col">Customer Name</th>
	      <th scope="col">Type</th>
	      <th scope="col">Quantity</th>
	      <th scope="col">Transaction At</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% if @transactions.present? %>
		  	<% @transactions.each_with_index do |transaction, i|%>
			    <tr>
			      <td scope="row"><%= i+1%></td>
			      <td><%= transaction.product_name%></td>
			      <td><%= transaction.customer_name%></td>
			      <td><%= transaction.transaction_type.camelcase%></td>
			      <td><%= transaction.quantity%></td>
			      <td><%= transaction.created_at.strftime("%d-%m-%Y %I:%M %p")%></td>
			    </tr>
			  <% end %>
			<% else %>
				<p> No Transactions found!!</p>
			<% end %>  
	  </tbody>
	</table>
</div>

<div class="transaction-modal-div"></div>