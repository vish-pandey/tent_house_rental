<div class="modal transaction-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Transaction</h5>
        <button type="button" class="close close-mdl" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for transaction, as: :transaction, url: transactions_path(transaction), method: 'post' do |f| %>
        <div class="modal-body" style="font-size: 15px;">
          <div class="row">
            <div class="col-md-6 margn-top">
              <b>Products</b>
            </div>
            <div class="col-md-6 margn-top">
              <%= f.select :product_id, options_from_collection_for_select(@products, "id", "title"), {}, {class: 'form-control'}%>
            </div>
          </div>
          <div class="row" style="margin-top: 10px;">
            <div class="col-md-6 margn-top">
              <b>Customers</b>
            </div>
            <div class="col-md-6 margn-top">
              <%= f.select :customer_id, options_from_collection_for_select(@customers, "id", "name"), {}, {class: 'form-control'}%>
            </div>
          </div>
          <div class="row" style="margin-top: 10px;">
            <div class="col-md-6 margn-top">
              <b>Transaction Type</b>
            </div>
            <div class="col-md-6 margn-top">
              <%= f.select :transaction_type, options_for_select([['Out', 'out'], ['In', 'in']]), {}, {class: 'form-control'}%>
            </div>
          </div>
          <div class="row" style="margin-top: 10px;">
            <div class="col-md-6 margn-top">
              <b>Quantity</b>
            </div>
            <div class="col-md-6 margn-top">
              <%= f.number_field :quantity, min: 1, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Save', class: "btn btn-primary " %>
          <button type="button" class="btn btn-secondary close-mdl" data-dismiss="modal">Close</button>
        </div>
      <% end %>  
    </div>
  </div>
</div>



<script type="text/javascript">
  $('.close-mdl').click(function(){
    $('.transaction-modal').hide();
  });
</script>